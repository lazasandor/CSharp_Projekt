<Window x:Class="WebApi_Client_Workshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApi_Client_Workshop"
        mc:Ignorable="d"
        Title="Műhely Kliens" Height="600" Width="1200">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" Margin="10" x:Name="WorkPlaceClient_JobList" SelectionMode="Single" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Név" Width="200" x:Name="Name"/>
                    <GridViewColumn Header="Típus" Width="150" x:Name="Type" />
                    <GridViewColumn Header="Rendszám" Width="100" x:Name="RegNumber" />
                    <GridViewColumn Header="Dátum" Width="200" x:Name="Date" />
                    <GridViewColumn Header="Hiba leírás" Width="350" x:Name="TechnicalFailure" />
                    <GridViewColumn Header="Állapot" Width="200" x:Name="Phase" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
