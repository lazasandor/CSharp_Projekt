<Window x:Class="WebApi_Client_Workshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApi_Client_Workshop"
        mc:Ignorable="d"
        Title="Műhely Kliens" Height="600" Width="1200">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid HorizontalScrollBarVisibility="Auto" x:Name="WorkShop_DataGrid" VerticalAlignment="Center" Height="Auto" Width="Auto" Margin="10,10,10,10" SelectionChanged="WorkShop_DataGrid_SelectionChanged" Loaded="WorkshopClientJobList_Loaded" IsReadOnly="True" Background="Transparent" SelectedItem="{Binding WorkshopDataGrid_SelectedItem, Mode=TwoWay}"/>


    </Grid>
</Window>
