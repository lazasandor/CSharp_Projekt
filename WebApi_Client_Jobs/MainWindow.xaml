<Window x:Class="WebApi_Client_Jobs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApi_Client_Jobs"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" Margin="10" SelectionMode="Single" x:Name="OfficeClient_JobList" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Név" Width="200" x:Name="Name"/>
                    <GridViewColumn Header="Típus" Width="150" x:Name="Type" />
                    <GridViewColumn Header="Rendszám" Width="100" x:Name="RegNumber" />
                    <GridViewColumn Header="Dátum" Width="200" x:Name="Date" />
                    <GridViewColumn Header="Hiba leírás" Width="350" x:Name="TechnicalFailure" />
                    <GridViewColumn Header="Állapot" Width="200" x:Name="Phase" />
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="1" Margin="10,0,10,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="2" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="Munka módosítása" Margin="10,10,10,10" Click="Modify_ButtonClick" FontSize="20"/>
                <Button Grid.Row="1" Content="Új munka felvétele" Margin="10,10,10,10" Click="AddNew_ButtonClick" FontSize="20"/>
            </Grid>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label Content="Teljes Név:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBox x:Name="FullName" Margin="10,10,50,10"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label Content="Autó típus:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBox x:Name="CarType" Margin="10,10,100,10"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label Content="Rendszám:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBox x:Name="RegNumber" Margin="10,10,150,10"/>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label Content="Rövid hibaleírás:" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBox x:Name="TechnicalFailure" Margin="10,10,10,10"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label Content="Állapot:" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <ComboBox Margin="20,20,20,20" FontSize="15">
                            <ComboBoxItem x:Name="ComboBox_RegisteredJob">Felvett munka</ComboBoxItem>
                            <ComboBoxItem x:Name="ComboBox_UnderWorking">Elvégzés alatt</ComboBoxItem>
                            <ComboBoxItem x:Name="ComboBox_JobDone">Befejezett munka</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
